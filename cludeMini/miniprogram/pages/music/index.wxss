page {
  height: 100%;
}

.wrapper {
  height: 100%;
}

.wrapper .header {
  position: relative;
  width: 100%;
  height: 440rpx;
  padding: 60rpx 33rpx 40rpx;
  box-sizing: border-box;
  overflow: hidden;
}

.wrapper .header .bgflur {
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  background-size: 300%;
  background-position: center center;
  background-repeat: no-repeat;
  filter: blur(75rpx);
}

.wrapper .header .contentbox {
  position: absolute;
  left: 33rpx;
  top: 60rpx;
  right: 33rpx;
}

.wrapper .header .contentbox .top {
  display: flex;
  align-items: center;
}

.wrapper .header .contentbox .top .cover {
  position: relative;
  width: 280rpx;
  height: 280rpx;
  background-size: 100% 100%;
  background-position: center center;
  background-repeat: no-repeat;
  border-radius: 6rpx;
  overflow: hidden;
}

.wrapper .header .contentbox .top .cover .count {
  position: absolute;
  right: 10rpx;
  top: 8rpx;
  padding-left: 26rpx;
  font-size: 24rpx;
  line-height: 26rpx;
  color: #ffffff;
  background-image: url("data:img/jpg;base64,");
  background-size: 24rpx auto;
  background-position: 0 center;
  background-repeat: no-repeat;
}

.wrapper .header .contentbox .top .info {
  flex: 1;
  padding-left: 30rpx;
  color: #ffffff;
}

.wrapper .header .contentbox .top .info .title {
  font-size: 34rpx;
  font-weight: bold;
  text-align: justify;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}

.wrapper .header .contentbox .top .info .desc {
  position: relative;
  font-size: 26rpx;
  text-align: justify;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  padding-right: 20rpx;
  box-sizing: border-box;
  background-image: url("data:img/jpg;base64,");
  background-size: 24rpx auto;
  background-position: right center;
  background-repeat: no-repeat;
}

.wrapper .header .contentbox .top .info .user {
  display: flex;
  align-items: center;
  padding: 23rpx 0;
}

.wrapper .header .contentbox .top .info .user .avatar {
  width: 64rpx;
  height: 64rpx;
  background-size: 100% 100%;
  background-position: 0 center;
  background-repeat: no-repeat;
  border-radius: 50%;
  overflow: hidden;
}

.wrapper .header .contentbox .top .info .user .name {
  flex: 1;
  font-size: 24rpx;
  padding-left: 20rpx;
}

.wrapper .musiclist {
  position: absolute;
  right: 0;
  left: 0;
  bottom: -390rpx;
  top: 390rpx;
  background: #ffffff;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
  overflow: hidden;
}

.wrapper .musiclist .m-header {
  display: flex;
  align-items: center;
  height: 100rpx;
  border-bottom: 1rpx solid #e3e3e3;
  padding: 0 24rpx;
  box-sizing: border-box;
}

.wrapper .musiclist .m-header .icon {
  display: inline-block;
  width: 44rpx;
  height: 44rpx;
  background-image: url("data:image/svg+xml;base64,");
  background-size: 100% 100%;
}

.wrapper .musiclist .m-header .tit {
  font-size: 32rpx;
  font-weight: 600;
  padding-left: 20rpx;
}

.wrapper .musiclist .m-header .count {
  font-size: 24rpx;
  color: #979797;
}

.wrapper .musiclist .scroll {
  height: calc(100% - 100rpx);
}

.wrapper .musiclist .scroll .item {
  display: flex;
  align-items: center;
  padding: 20rpx 22rpx;
  box-sizing: border-box;
}

.wrapper .musiclist .scroll .item .index {
  width: 60rpx;
  font-size: 24rpx;
  color: #999999;
  padding-left: 10rpx;
  box-sizing: border-box;
}

.wrapper .musiclist .scroll .item .content {
  flex: 1;
  max-width: 600rpx;
}

.wrapper .musiclist .scroll .item .content .name {
  font-size: 28rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.wrapper .musiclist .scroll .item .content .desc {
  font-size: 24rpx;
  color: #999999;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.wrapper .musiclist .scroll .item .fire-loading {
  width: 40rpx;
  height: 40rpx;
  overflow: hidden;
}

.wrapper .musiclist .scroll .item .fire-loading .icon {
  width: 40rpx;
}

.wrapper .musiclist .scroll .item.playing .index, .wrapper .musiclist .scroll .item.playing .content, .wrapper .musiclist .scroll .item.playing .desc {
  color: #ff4134;
}
