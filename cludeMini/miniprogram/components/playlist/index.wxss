.wrapper {
  position: fixed;
  right: 0;
  left: 0;
  bottom: 0rpx;
  top: 0;
  background: transparent;
}

.wrapper .middle {
  position: absolute;
  right: 0;
  left: 0;
  bottom: 0rpx;
  top: 320rpx;
  background: #ffffff;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
  transform: translateY(100%);
  transition: all 0.3s;
  overflow: hidden;
}

.wrapper .middle.show {
  transform: translateY(0);
}

.wrapper .middle .header {
  height: 100rpx;
  display: flex;
  align-items: center;
  color: #666666;
  border-bottom: 1rpx solid #e3e3e3;
  font-size: 0;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.wrapper .middle .header .left {
  display: flex;
  align-items: center;
  flex: 1;
  height: 100rpx;
  line-height: 100rpx;
  text-align: left;
}

.wrapper .middle .header .left .iconfont {
  display: inline-block;
  font-size: 48rpx;
}

.wrapper .middle .header .left .tit {
  font-size: 28rpx;
  padding-left: 20rpx;
}

.wrapper .middle .header .right {
  padding: 0 20rpx;
}

.wrapper .middle .header .right .iconfont {
  display: inline-block;
  font-size: 30rpx;
}

.wrapper .middle .scrollview {
  height: calc(100% - 100rpx);
}

.wrapper .middle .scrollview .item {
  display: flex;
  align-items: center;
  padding: 20rpx 22rpx;
  box-sizing: border-box;
}

.wrapper .middle .scrollview .item .index {
  width: 60rpx;
  font-size: 24rpx;
  color: #999999;
  padding-left: 10rpx;
  box-sizing: border-box;
}

.wrapper .middle .scrollview .item .content {
  flex: 1;
  max-width: 600rpx;
}

.wrapper .middle .scrollview .item .content .name {
  font-size: 28rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.wrapper .middle .scrollview .item .content .desc {
  font-size: 24rpx;
  color: #999999;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.wrapper .middle .scrollview .item .fire-loading {
  width: 40rpx;
  height: 40rpx;
  overflow: hidden;
}

.wrapper .middle .scrollview .item .fire-loading .icon {
  width: 40rpx;
}

.wrapper .middle .scrollview .item.playing .index, .wrapper .middle .scrollview .item.playing .content, .wrapper .middle .scrollview .item.playing .desc {
  color: #ff4134;
}
